mixin list-group-item-collapsible(url,name,active)
	if(active === "true")
		a.list-group-item.active(href="#"+url, data-toggle="collapse")
			i.glyphicon.glyphicon-chevron-down
			| #{name}
		.list-group.collapse(id=url)
			block
	else
		a.list-group-item(href="#"+url, data-toggle="collapse")
			i.glyphicon.glyphicon-chevron-right
			| #{name}
		.list-group.collapse(id=url)
			block

mixin list-group-custom(style)
	- var ddstyle = style || ''
	- if(ddstyle.indexOf("list-group") == -1) ddstyle += (ddstyle.length == 0 ? "list-group" : " list-group")
	div(class=ddstyle)
		block