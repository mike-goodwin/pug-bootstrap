//- list-group mixins
mixin list-group(items,active,style)
	- var ddstyle = style || ''
	- if(ddstyle.indexOf("list-group") == -1) ddstyle += (ddstyle.length == 0 ? "list-group" : " list-group")
	ul(class=ddstyle)
		each item, index in items
			if(index === active)
				li.list-group-item.active #{item}
			else
				li.list-group-item #{item}

mixin list-group-ordered(items,active,style)
	- var ddstyle = style || ''
	- if(ddstyle.indexOf("list-group") == -1) ddstyle += (ddstyle.length == 0 ? "list-group" : " list-group")
	ol(class=ddstyle)
		each item, index in items
			if(index === active)
				li.list-group-item.active #{item}
			else
				li.list-group-item #{item}

mixin list-group-links(items,active,style)
	- var ddstyle = style || ''
	- if(ddstyle.indexOf("list-group") == -1) ddstyle += (ddstyle.length == 0 ? "list-group" : " list-group")
	div(class=ddstyle)
		each item, index in items
			if(index === active)
				a.list-group-item.active(href=item.url) #{item.text}
			else
				a.list-group-item(href=item.url) #{item.text}

mixin list-group-item(url,active)
	if(active === "true")
		a.list-group-item.active(href=url)
			block
	else
		a.list-group-item(href=url)
			block

